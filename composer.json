{
    "name": "reun/php-app-definitions",
    "type": "library",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.44",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "Reun\\PhpAppDefinitions\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "lint": [
            "composer normalize",
            "vendor/bin/php-cs-fixer fix .",
            "vendor/bin/phpstan"
        ]
    }
}
